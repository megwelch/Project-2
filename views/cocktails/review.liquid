{% layout 'layout.liquid' %}
{% block content %}
<div class="container-sm form-container review-container">
    <form class="form-group" action="/reviews/{{cocktail.id}}" method="POST">
        <fieldset>
            <legend class="form-title">Review {{cocktail.name}}</legend>
            <label class="form-label">Rating: </label>
            {%- comment -%} <select 
                type="text" 
                name="rating" 
                placeholder="Number 1-5"
                class="form-select new-input"
            >
                    <option value="1"></i></option>
                    <option value="2"></i></option>
                    <option value="3">three</option>
                    <option value="4">four</option>
                    <option value="5">five</option>

            </select> {%- endcomment -%}
            <div class="form-check">
                <input class="form-check-input" type="radio" name="rating" value="<i class='fa-solid fa-star yellow-star'></i><i class='fa-solid fa-star gray-star'></i><i class='fa-solid fa-star gray-star'></i><i class='fa-solid fa-star gray-star'></i><i class='fa-solid fa-star gray-star'></i>"/>
                <label class="form-check-label" for="flexRadioDefault1"> <i class="fa-solid fa-star yellow-star"></i> </label>
                <br>
                <input class="form-check-input" type="radio" name="rating" value="<i class='fa-solid fa-star yellow-star'></i><i class='fa-solid fa-star yellow-star'></i><i class='fa-solid fa-star gray-star'></i><i class='fa-solid fa-star gray-star'></i><i class='fa-solid fa-star gray-star'></i>"/>
                <label class="form-check-label" for="flexRadioDefault1"> <i class="fa-solid fa-star yellow-star"></i><i class="fa-solid fa-star yellow-star"></i> </label>
                <br>
                <input class="form-check-input" type="radio" name="rating" value="<i class='fa-solid fa-star yellow-star'></i><i class='fa-solid fa-star yellow-star'></i><i class='fa-solid fa-star yellow-star'></i><i class='fa-solid fa-star gray-star'></i><i class='fa-solid fa-star gray-star'></i>"/>
                <label class="form-check-label" for="flexRadioDefault1"> <i class="fa-solid fa-star yellow-star"></i><i class="fa-solid fa-star yellow-star"></i><i class="fa-solid fa-star yellow-star"></i> </label>
                <br>
                <input class="form-check-input" type="radio" name="rating" value="<i class='fa-solid fa-star yellow-star'></i><i class='fa-solid fa-star yellow-star'></i><i class='fa-solid fa-star yellow-star'></i><i class='fa-solid fa-star yellow-star'></i><i class='fa-solid fa-star gray-star'></i>"/>
                <label class="form-check-label" for="flexRadioDefault1"> <i class="fa-solid fa-star yellow-star"></i><i class="fa-solid fa-star yellow-star"></i><i class="fa-solid fa-star yellow-star"></i><i class="fa-solid fa-star yellow-star"></i> </label>
                <br>
                <input class="form-check-input" type="radio" name="rating" value="<i class='fa-solid fa-star yellow-star'></i><i class='fa-solid fa-star yellow-star'></i><i class='fa-solid fa-star yellow-star'></i><i class='fa-solid fa-star yellow-star'></i><i class='fa-solid fa-star yellow-star'></i>"/>
                <label class="form-check-label" for="flexRadioDefault1"> <i class="fa-solid fa-star yellow-star"></i><i class="fa-solid fa-star yellow-star"></i><i class="fa-solid fa-star yellow-star"></i><i class="fa-solid fa-star yellow-star"></i><i class="fa-solid fa-star yellow-star"></i> </label>
            </div>

            <label class="form-label">Review:</label>
            <input 
                type="text" 
                name="comment" 
                placeholder="Tell us your opinion on the {{cocktail.name}}!" 
                class="form-control new-input"
            >
        </fieldset>
        <div class="text-center">
            <input type="submit" value="Submit Review" class="btn new-edit-btn justify-content-center">
        </div>
    </form>
</div>
{%- comment -%} <container class="review-container d-flex justify-content-center">
        <hr>
        {% if loggedIn %}
            <div class="col-md-6">
                <form action="/reviews/{{cocktail.id}}" method="POST">
                    <fieldset>
                        <legend>Add Rating</legend>
                        <label class="form-label">Rating (1-5):</label>
                        <input class="form-control mb-1" type="text" placeholder="enter your rating" name="rating" required>
                    </fieldset>
                    <fieldset>
                        <legend>Add Review</legend>
                        <label class="form-label">comment:</label>
                        <input class="form-control mb-1" type="text" placeholder="enter your comment..." name="comment" required>
                    </fieldset>
                    <input class="btn btn-success" type="submit" value="add review">
                </form>
            </div>
        {% else %}
            <div class="col-md-6">
                <small>If you'd like to leave a review, please log in...</small>
            </div>
        {% endif %}
      
    </container> {%- endcomment -%}
{% endblock %}