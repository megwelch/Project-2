{% layout 'layout.liquid'%}
{% block content %}
<div>
    <h2 class="display-6">All Examples</h2>
    <div class="row">
        {% for cocktail in cocktails %}
        <div class="card" style="width: 18rem;">
            <h5 class="card-header">{{ cocktail.name }}</h5>
            <div class="card-body">
                <h5 class="card-title">
                    Ready?: {{ cocktail.spirit }}
                </h5>
                <p class="card-text">
                    Body: {{ cocktail.ingredients }}
                </p>
                <p class="card-text">
                    Amount: {{ cocktail.recipe }}
                </p>
                <a href="/cocktails/{{ cocktail.id }}" class="btn btn-info">
                    View {{ cocktail.name }}
                </a>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}